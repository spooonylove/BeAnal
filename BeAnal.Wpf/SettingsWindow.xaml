<Window x:Class="BeAnal.Wpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
                <Label Content="Number of Bars"/>
                <Slider x:Name="BarSlider" Minimum="16" Maximum="256"
                        TickFrequency="16" IsSnapToTickEnabled="True"
                        ValueChanged="BarSlider_ValueChanged"/>
        </StackPanel>
    </Grid>
</Window>