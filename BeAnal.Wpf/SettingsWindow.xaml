<Window x:Class="BeAnal.Wpf.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Number of Bars:" 
               Grid.Row="0" Grid.Column="0" 
               VerticalAlignment="Center" HorizontalAlignment="Right"
               Margin="0,0,10,0"/>

        <Slider x:Name="BarsSlider" 
                Grid.Row="0" Grid.Column="1"
                Minimum="10" Maximum="512" 
                TickFrequency="2" IsSnapToTickEnabled="True"
                ValueChanged="BarsSlider_ValueChanged"
                VerticalAlignment="Center"/>
        
        <TextBlock x:Name="BarsValueText" 
                   Grid.Row="0" Grid.Column="2"
                   Text="64" MinWidth="30"
                   Margin="10,0,0,0"
                   VerticalAlignment="Center" HorizontalAlignment="Right"/>

        <Label Content="Sensitivity:" 
           Grid.Row="1" Grid.Column="0" 
           VerticalAlignment="Center" HorizontalAlignment="Right"
           Margin="0,10,10,0"/>

        <Slider x:Name="SensitivitySlider" 
                Grid.Row="1" Grid.Column="1"
                Minimum="1000" Maximum="20000" 
                TickFrequency="500" IsSnapToTickEnabled="True"
                ValueChanged="SensitivitySlider_ValueChanged"
                VerticalAlignment="Center" Margin="0,10,0,0"/>
        
        <TextBlock x:Name="SensitivityValueText" 
                Grid.Row="1" Grid.Column="2"
                Text="8000" MinWidth="30"
                Margin="10,10,0,0"
                VerticalAlignment="Center" HorizontalAlignment="Right"/>

    </Grid>
</Window>